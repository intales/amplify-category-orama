{
  "name": "amplify-provider-orama",
  "description": "",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc && mkdir -p build && zip -jr build/handler.zip dist/handler",
    "test": "jest",
    "clean": "rm -rf dist/ build/",
    "prepublishOnly": "npm run test && npm run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint --cache src/",
    "lint:fix": "eslint --cache --fix src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intales/amplify-provider-orama.git"
  },
  "author": "Riccardo Pacioni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/intales/amplify-provider-orama/issues"
  },
  "homepage": "https://github.com/intales/amplify-provider-orama#readme",
  "dependencies": {
    "@aws-amplify/graphql-model-transformer": "^1.3.0",
    "@aws-amplify/graphql-transformer-core": "^1.3.0",
    "@aws-cdk/core": "^1.201.0",
    "@orama/orama": "^1.0.0-beta.16",
    "@orama/plugin-data-persistence": "^1.0.0-beta.16",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/aws-lambda": "^8.10.115",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "overrides"
    ]
  }
}
